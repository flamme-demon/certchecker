<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background with rounded corners, tinted dynamically -->
    <ImageView
        android:id="@+id/widget_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_background"
        android:scaleType="fitXY"
        android:importantForAccessibility="no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CertCheck"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#90CAF9" />

            <TextView
                android:id="@+id/widget_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="9sp"
                android:textColor="#80FFFFFF" />
        </LinearLayout>

        <!-- Counters row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/widget_ok_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#66BB6A" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:textSize="10sp"
                    android:textColor="#B0FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/widget_warning_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFA726" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attention"
                    android:textSize="10sp"
                    android:textColor="#B0FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/widget_error_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#EF5350" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Erreurs"
                    android:textSize="10sp"
                    android:textColor="#B0FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Separator -->
        <TextView
            android:id="@+id/widget_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            android:background="#30FFFFFF"
            android:visibility="gone" />

        <!-- All OK message -->
        <TextView
            android:id="@+id/widget_all_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="\u2714 Tous les certificats sont valides"
            android:textSize="11sp"
            android:textColor="#66BB6A"
            android:gravity="center"
            android:visibility="gone" />

        <!-- Warning section -->
        <LinearLayout
            android:id="@+id/widget_warning_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/widget_warning_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u26A0 Attention"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FFA726" />

            <TextView
                android:id="@+id/widget_warning_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                android:textSize="10sp"
                android:textColor="#FFCC80"
                android:maxLines="5"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>

        <!-- Error section -->
        <LinearLayout
            android:id="@+id/widget_error_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/widget_error_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2716 Erreurs"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#EF5350" />

            <TextView
                android:id="@+id/widget_error_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                android:textSize="10sp"
                android:textColor="#EF9A9A"
                android:maxLines="5"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
